# Environment
NODE_ENV=production

# Server
PORT=3000

# Database Configuration
# Use POSTGRES_PRISMA_URL for optimal performance with pgBouncer in Vercel/Supabase
POSTGRES_PRISMA_URL=your_postgres_prisma_url_here

# Alternative: Use POSTGRES_URL if PRISMA_URL is not available
# POSTGRES_URL=your_postgres_url_here

# Alternative: Use DATABASE_URL for other providers
# DATABASE_URL=your_database_url_here

# Connection Pool Configuration (optional)
# PG_MAX_CLIENTS=20

# JWT Configuration (REQUIRED)
JWT_SECRET=your_jwt_secret_here_minimum_10_characters
JWT_EXPIRES_IN=1h

# ============================================
# FRONTEND ONLY VARIABLES (Not needed in backend)
# ============================================
# These variables are for your frontend application only
# Do NOT add them to your backend .env file
# 
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
